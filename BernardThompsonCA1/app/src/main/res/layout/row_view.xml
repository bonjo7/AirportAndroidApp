<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttonWhiteText">

    <TextView
        android:text="FlightNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        android:id="@+id/tvArrivalFlightNo"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvArrivalFlightNo"
        android:layout_alignLeft="@+id/tvArrivalFlightNo"
        android:layout_alignStart="@+id/tvArrivalFlightNo"
        android:layout_marginTop="12dp"
        android:id="@+id/tvArrivalTime"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:text="Status"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvArrivalTime"
        android:layout_alignRight="@+id/tvArrivalDestination"
        android:layout_alignEnd="@+id/tvArrivalDestination"
        android:id="@+id/tvArrivalStatus"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/tvArrivalDestination"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:id="@+id/arrivalImageView"
        />

    <TextView
        android:text="Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvArrivalDestination"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/tvArrivalFlightNo"
        android:layout_alignBottom="@+id/tvArrivalFlightNo"
        android:layout_toRightOf="@+id/tvArrivalFlightNo"
        android:layout_toEndOf="@+id/tvArrivalFlightNo" />



</RelativeLayout>