<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/buttonWhiteText"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="thompson.bernard.bernardthompsonca1.Information"
    tools:showIn="@layout/activity_information">

    <TextView
        android:text="Information Desk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvInfoDeskTitle"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:text="For general queries please contact the information desk loccated at the Check-In area of the terminal building. Telephone queries can be dealt with by calling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInfoDeskTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvInfoText"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:text="+353 51 846 600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInfoText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvInfoPhoneNo"
        android:autoLink="phone"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="18sp" />

    <TextView
        android:text="There are 200 car parking spaces directly outside the terminal building. First 15minutes free, €2 per hour, €8 per 24 hours, €35 per week. Pay stations are located in the terminal building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCarParkTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <include
        android:id="@+id/tool_bar_bottom"
        layout="@layout/bottom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:text="Waterford Airport is wheelchair accessable. Complimentary wheelchair assistamce can also be provided upon request for passengers departing and arriving at Waterford Airport."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDisbaledText"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_below="@+id/tvDisabledTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Car Park"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCarParkTitle"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@+id/tvInfoPhoneNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Disabled Passengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDisabledTitle"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
